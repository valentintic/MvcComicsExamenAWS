@model Comic
@{
    ViewData["Title"] = "Comic Details";
}

<h1>Comic Details</h1>

<div>
    <h4>@Model.Name</h4>
    <img src="@Model.Imagen" alt="@Model.Name" style="max-height:200px;" />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.ID</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Image URL</dt>
        <dd class="col-sm-10">@Model.Imagen</dd>
    </dl>
    <a asp-page="Index">Back to List</a>
</div>